@model System.DateTime?

@Html.TextBox("", String.Format("{0:d}", Model.HasValue ? Model.Value.ToShortDateString() : string.Empty), new { @class = "datepicker" })

<script type="text/javascript">
    $(function () {
        $(".datepicker").datepicker();
    });
</script>
