
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using HotelReservations.Web.Areas.HotelAdministration.Models

@model HotelViewModel

<h2>@Model.Name</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <img class="img-rounded" src=@Model.FirstPhotoUrl />
        <p>
            @for (int i = 1; i <= Model.Stars; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </p>
        <p>Address: @Model.Address</p>
        <p>City: @Model.CityName Zip: @Model.Zip</p>
        <p>Country: @Model.CountryName</p>
        <ul>
            @if (Model.HasRestaurant)
            {
                <li>Restaurant</li>
            }
            @if (Model.HasParking)
            {
                <li>Parking</li>
            }
            @if (Model.HasInternet)
            {
                <li>Internet</li>
            }

        </ul>
        @Html.ActionLink("Reservation", "Add", "Reservation", new { Model.Id }, new { @class = "btn btn-info" })
        @*<button class="btn btn-info" formaction="">Reservation</button>*@
    </div>
</div>
